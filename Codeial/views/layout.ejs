<html>
  <head>
    <title><%= locals.title %></title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <link
      rel="shortcut icon"
      href="/Images/info4.png"
      type="image/x-icon"
    />
    <link rel="stylesheet" href="/css/layout.css" />
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <%- style %>
  </head>
  <body>
    <%- include('_header'); %>

    <!-- Adding container for flash messages if flash sucess object exist in the session cookie -->
    <!-- <% if(flash.sucess && flash.sucess.length > 0){ %>
            <h4 id="flash"> <%= flash.sucess %></h4>
        <%}else if(flash.error && flash.error.length > 0){%>
            <h4 id="flash"> <%= flash.error %></h4>
        <%}%> -->
        
    <main id="layout-main"><%- body %></main>

    <%- include('_footer'); %> 
    <%- script %>

    <script>

      <% if(flash.success && flash.success.length > 0){ %>

          new Noty({
              theme: 'relax',
              text: '<%= flash.success %>',
              type : 'success',
              layout : 'topRight',
              timeout : 1500
          }).show();
  
      <%}%>

      <% if(flash.error && flash.error.length > 0){ %>

          new Noty({
              theme: 'relax',
              text: '<%= flash.error %>',
              type : 'error',
              layout : 'topRight',
              timeout : 1500
          }).show();

      <%}%>


      <% if(flash.welcome && flash.welcome.length > 0){ %>

        new Noty({
            theme: 'metroui',
            text: '<%= flash.welcome %>',
            type : 'success',
            layout : 'topRight',
            timeout : 1500
        }).show();

        <%}%>

    </script>
  </body>
</html>
